<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game1lvl1"
    android:orientation="vertical"
    android:background="@drawable/backgroundkodible">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scoreLabGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit"
            android:text="Score: 0"
            android:textColor="@color/white"
            android:textSize="50sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btn_bck"
            android:tag="compost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:background="@drawable/banana"

            />
        <Button
            android:id="@+id/btn_dwn"
            android:layout_width="0dp"
            android:tag="compost"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fish2"

            />
        <Button
            android:id="@+id/btn_fwd"
            android:layout_width="0dp"
            android:tag="recycle"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/glass1"

            />
        <Button
            android:id="@+id/btn_up"
            android:layout_width="0dp"
            android:tag="compost"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/greenapple"

            />



    </LinearLayout>
    <LinearLayout

        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:tag="compost"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">



        <Button
            android:id="@+id/btn_input2"
            android:layout_width="80dp"
            android:tag="recycle"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/recycletrashrash"
            android:padding="12dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">


        <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="recycle"
            android:background="@color/yellowDark"
            android:text="@string/play"
            android:textColor="@color/black"
            android:fontFamily="@font/kanit"
            android:layout_margin="5dp"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:layout_margin="5dp"
            android:background="@color/yellowDark"
            android:textColor="@color/black"
            android:fontFamily="@font/kanit"
            android:textSize="20sp"/>


        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_margin="5dp"
            android:background="@color/yellowDark"
            android:textColor="@color/black"
            android:fontFamily="@font/kanit"
            android:textSize="20sp"/>

    </LinearLayout>


</LinearLayout>
